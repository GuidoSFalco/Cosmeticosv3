<EditForm Model="Orden" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Producto</label>
        <div>
            <InputText class="form-control" @bind-Value="@Orden.Producto" />
            <ValidationMessage For="@(() => Orden.Producto)" />
        </div>
    </div>
    <div class="form-group">
        <label>Cantidad</label>
        <div>
            <input placeholder="Compra" @bind="@Orden.Cantidad" />
            <ValidationMessage For="@(() => Orden.Cantidad)" />
        </div>
    </div>
    <div class="form-group">
        <label>Telefono</label>
        <div>
            <input placeholder="Compra" @bind="@Orden.Telefono" />
            <ValidationMessage For="@(() => Orden.Telefono)" />
        </div>
    </div>
    <div class="form-group">
        <label>Domicilio</label>
        <div>
            <InputText class="form-control" @bind-Value="@Orden.Domicilio" />
            <ValidationMessage For="@(() => Orden.Domicilio)" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
    <button class="btn btn-secondary" @onclick="onCancel" type="button">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Orden Orden { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}

